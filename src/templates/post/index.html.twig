{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}

    <link href="{{ asset('assets/css/post.css') }}" rel="stylesheet"/>

    <h1>Post index</h1>

    <div class="row justify-content-around">

        {% for post in posts %}

        <div class="col-3 m-3 p-3">

            <div class="card">

                <a href="{{ path('app_post_show', {'id': post.id}) }}">
                
                    <img class="card-img-top" src="https://images.unsplash.com/photo-1665512423024-e7ecdc67840a?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" alt="Photo">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ post.name }}</h5>
                        <p class="card-text">Adresse.</p>
                        <span class="align-self-end">{{ post.price }}€</span>
                    </div>

                </a>

            </div>

            <span class="date">Date de publication : {{ post.date ? post.date|date('d/m/Y') : '' }}</span>

        </div>
        


        {% else %}

            <span>Aucune annonce n'a été trouvée</span>

        {% endfor %}

    </div>

