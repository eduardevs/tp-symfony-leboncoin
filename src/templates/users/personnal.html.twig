{% extends 'base.html.twig' %}

{% block title %} Espace Personnel {% endblock %}

{% block body %}         
<div class="example-wrapper">
    <h2> Espace Personnel</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id : </th>
                <th scope="col">Email :</th>
                <th scope="col">Nom - Pr√©nom</th>
                <th scope="col">Date d'inscription</th>
            </tr>
        </thead>
        <tbody>
          <tr>
                <td>{{userIdentity.id}}</td>
                <td>{{userIdentity.email}}</td>
                <td>{{userIdentity.lastname}} - {{userIdentity.firstname}}</td>
